<div class="devise-page">
  <div class="container">
    <div class="row">
      <div class="login-page">
        <h4>ログイン</h4>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control devise-form", :placeholder => "メールアドレス" %>
            <%= f.password_field :password, autocomplete: "current-password",class: "form-control devise-form", :placeholder => "パスワード" %>
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
          <div class="actions">
            <%= f.submit "ログイン",class:"btn btn-primary"%>
          </div>
        <% end %>
        </br>
        <%= render "devise/shared/links" %>
       </div>
    </div>
  </div>
</div>