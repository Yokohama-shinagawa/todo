<!DOCTYPE html>
<html>
  <head>
    <title>TodoApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header>
    <div class="bg-info clearfix">
      <p type="text" class="float-left">Todoアプリ</p>
      <%= link_to "Todoアプリ","/users/index",class:"float-left" %>
      <% if user_signed_in? %>
        <%= link_to "ログアウト",destroy_user_session_path, method: :delete,class:"btn btn-secondary float-right" %>
        <%= link_to "マイページ",user_path(current_user),class:"btn btn-secondary float-right" %>
      <% else %>
        <%= link_to "ログイン",new_user_session_path, class:"btn btn-secondary float-right" %>
        <%= link_to "新規登録",user_registration_path, method: :post, class:"btn btn-secondary float-right" %>
      <% end %>
    </div>
  </header>
  <body>
    <%= yield %>
  </body>
</html>
